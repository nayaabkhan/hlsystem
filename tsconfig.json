{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@layout/*": ["library/components/layout/*"],
      "@controls/*": ["library/components/controls/*"],
      "@protocols/*": ["library/protocols/*"],
      "@modifiers/*": ["library/modifiers/*"],
      "@themes/*": ["library/themes/*"],
      "@tokens": ["library/tokens"],
      "@models/*": ["models/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
